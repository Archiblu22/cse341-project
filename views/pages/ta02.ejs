<!DOCTYPE html>
<html>

<head>
  <% include ../includes/header.ejs %>
</head>

<body>
  <% include ../includes/nav.ejs %>
    <div class="jumbotron text-center">
      <div class="container">
        <h1>
          <%= title %>
        </h1>
        <p>This is the placeholder for Team Activity 02</p>
      </div>
    </div>
    <div class="container">
      <div>
        <form action="/ta02/addUser" method="POST">
          <label for="newUser">New Username</label><br>
          <input type="text" name="username">
          <button type="submit">Submit</button>
        </form>
      </div>
      <div>
        <form action="/ta02/removeUser" method="POST">
          <label for="remUser">Username to remove</label><br>
          <input type="text" name="username">
          <button type="submit">Remove</button>
        </form>
      </div>
      <div>
        <ul>
          <% for(let user of users) { %>
            <li>
              <%= user %>
            </li>
            <% } %>
        </ul>
      </div>
    </div>


</body>

</html>